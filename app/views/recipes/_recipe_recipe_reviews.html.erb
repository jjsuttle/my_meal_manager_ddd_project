<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recipe Reviews

    <a data-toggle="collapse" href="#recipe_recipe_reviews_new_form">
      Add recipe review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @recipe.recipe_reviews.each do |recipe_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to recipe_review, recipe_review %>

        <% if current_user == recipe_review.reviewer %>
          <%= link_to recipe_review, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="recipe_recipe_reviews_new_form">
        <%= render partial: "recipes/recipe_recipe_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
