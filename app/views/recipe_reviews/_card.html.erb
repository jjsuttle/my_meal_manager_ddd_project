<div class="card mb-3">
  <h2 class="card-header h4">
    Recipe Review #<%= recipe_review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Reviewer</dt>
      <dd>
        <% if @recipe_review.reviewer.present? %>
          <%= link_to recipe_review.reviewer, recipe_review.reviewer %>
        <% end %>
      </dd>

      <dt>Recipe</dt>
      <dd>
        <% if @recipe_review.recipe.present? %>
          <%= link_to recipe_review.recipe, recipe_review.recipe %>
        <% end %>
      </dd>

      <dt>Rating</dt>
      <dd><%= recipe_review.rating %></dd>

      <dt>Review</dt>
      <dd><%= recipe_review.review %></dd>

      <dt>Recipe name</dt>
      <dd><%= recipe_review.recipe_name %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back recipe_review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @recipe_review.reviewer %>
          <%= link_to edit_recipe_review_url(recipe_review), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @recipe_review.reviewer %>
          <%= link_to recipe_review, method: :delete, data: { confirm: "Do you really want to delete this recipe_review?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(recipe_review.updated_at) %> ago
  </div>
</div>
