<%= form_with(model: @recipe_review, local: true) do |f| %>

  <%= f.hidden_field :reviewer_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :recipe_id %>

    <%= f.collection_select :recipe_id, Recipe.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>

    <%= f.text_field :rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :review %>
    <%= f.text_area :review, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :recipe_name %>

    <%= f.text_field :recipe_name, class: "form-control" %>
  </div>

  <%= f.submit "Create recipe review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
