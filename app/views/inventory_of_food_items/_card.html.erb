<div class="card mb-3">
  <h2 class="card-header h4">
    Inventory Of Food Item #<%= inventory_of_food_item.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @inventory_of_food_item.user.present? %>
          <%= link_to inventory_of_food_item.user, inventory_of_food_item.user %>
        <% end %>
      </dd>

      <dt>Date purchased</dt>
      <dd><%= inventory_of_food_item.date_purchased %></dd>

      <dt>Expiration date</dt>
      <dd><%= inventory_of_food_item.expiration_date %></dd>

      <dt>Days until expiration</dt>
      <dd><%= inventory_of_food_item.days_until_expiration %></dd>

      <dt>Purchased status</dt>
      <dd><%= inventory_of_food_item.purchased_status %></dd>

      <dt>Food name</dt>
      <dd><%= inventory_of_food_item.food_name %></dd>

      <dt>Notes</dt>
      <dd><%= inventory_of_food_item.notes %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back inventory_of_food_item, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @inventory_of_food_item.user %>
          <%= link_to edit_inventory_of_food_item_url(inventory_of_food_item), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @inventory_of_food_item.user %>
          <%= link_to inventory_of_food_item, method: :delete, data: { confirm: "Do you really want to delete this inventory_of_food_item?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(inventory_of_food_item.updated_at) %> ago
  </div>
</div>
