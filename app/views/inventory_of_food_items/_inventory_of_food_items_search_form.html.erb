<%= search_form_for @q, :class => collapse_search_form, :id => "inventory_of_food_items_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :food_name_cont, "Food name contains" %>
    <%= f.text_field :food_name_cont, :class => "form-control", :placeholder => "Food name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :notes_cont, "Notes contains" %>
    <%= f.text_field :notes_cont, :class => "form-control", :placeholder => "Notes contains" %>
  </div>

  <div class="form-group">
    <%= f.label :days_until_expiration, "Days until expiration" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :days_until_expiration_gteq, :class => "form-control", :placeholder => "Days until expiration greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :days_until_expiration_lteq, :class => "form-control", :placeholder => "Days until expiration less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :expiration_date, "Expiration date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='expiration_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :expiration_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Expiration date greater than or equal to", :data => {:target => '#expiration_dategteqPicker'} %>
          <div class="input-group-append" data-target='#expiration_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='expiration_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :expiration_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Expiration date less than or equal to", :data => {:target => '#expiration_datelteqPicker'} %>
          <div class="input-group-append" data-target='#expiration_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#expiration_dategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#expiration_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#expiration_dategteqPicker').on("dp.change", function (e) {
              $('#expiration_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#expiration_datelteqPicker').on("dp.change", function (e) {
              $('#expiration_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :date_purchased, "Date purchased" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='date_purchasedgteqPicker' data-target-input="nearest">
          <%= f.text_field :date_purchased_gteq, :class => "form-control datetimepicker-input", :placeholder => "Date purchased greater than or equal to", :data => {:target => '#date_purchasedgteqPicker'} %>
          <div class="input-group-append" data-target='#date_purchasedgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='date_purchasedlteqPicker' data-target-input="nearest">
          <%= f.text_field :date_purchased_lteq, :class => "form-control datetimepicker-input", :placeholder => "Date purchased less than or equal to", :data => {:target => '#date_purchasedlteqPicker'} %>
          <div class="input-group-append" data-target='#date_purchasedlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#date_purchasedgteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#date_purchasedlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#date_purchasedgteqPicker').on("dp.change", function (e) {
              $('#date_purchasedlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#date_purchasedlteqPicker').on("dp.change", function (e) {
              $('#date_purchasedgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :recipe_ingredients_ingredient_name_cont, "Recipe ingredients ingredient_name contains" %>
    <%= f.text_field :recipe_ingredients_ingredient_name_cont, :class => "form-control", :placeholder => "Recipe ingredients ingredient_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/inventory_of_food_items" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

